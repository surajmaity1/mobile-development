<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_mer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inv_pend_mer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="@string/invite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mer_usr_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:elevation="8dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_person"
                    android:layout_margin="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mer_usr_nm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/toolbar_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Name" />

                    <TextView
                        android:id="@+id/mer_address_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tab_bac_color"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="Address, KM" />

                    <ProgressBar
                        android:id="@+id/mer_progress_bar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:progress="75"
                        android:padding="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/mer_usr_img_call"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:elevation="8dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_cal"
                            android:layout_margin="10dp"
                            />

                        <ImageView
                            android:id="@+id/mer_usr_img_per_add"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:elevation="8dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_person_add"
                            android:layout_margin="10dp"
                            />

                        <ImageView
                            android:id="@+id/mer_usr_img_loc"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:elevation="8dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_location"
                            android:layout_margin="10dp"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/mer_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                tools:text="Experience 1 | Experience 2 | Experience 3"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/toolbar_color"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/mer_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="11sp"
                tools:text="This is about individual user."
                android:textColor="@color/toolbar_color"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>